<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeWork204_1"
    android:layout_gravity="center"
    android:gravity="top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_rect01"
        tools:ignore="MissingConstraints">

        <!-- TextView for Title -->
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Home Work 204.1"
            android:textSize="30sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/White"
            android:textStyle="bold"/>

        <!-- TextView for Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Profit Calculator"
            android:textSize="25sp"
            android:layout_below="@+id/tv_1"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/Black"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="কেনা দাম কত ?"
            android:textSize="30sp"
            android:layout_margin="10dp"
            android:textColor="@color/Black"/>

        <EditText
            android:id="@+id/ed_Buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:padding="20dp"
            android:background="@drawable/transprant_shape"
            android:hint="Buying Price"
            android:layout_margin="10dp"
            android:textColor="@color/Blue"
            android:textColorHint="@color/Black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="কত % প্রফিট করতে চান?"
            android:textSize="30sp"
            android:textColor="@color/Black"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/ed_Parcent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Percent"
            android:textColorHint="@color/Black"
            android:textColor="@color/Blue"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:background="@drawable/transprant_shape"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_ClickHere"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="ক্লিক করুন"
            app:backgroundTint="@color/AliceBlue"
            android:fontFamily="@font/lishadhinata_regular"
            app:cornerRadius="10dp"
            android:textColor="@color/Green" />

        <TextView
            android:id="@+id/tv_Display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textColor="@color/Green"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>